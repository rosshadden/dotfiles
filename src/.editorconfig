root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 128
tab_width = 2
trim_trailing_whitespace = true

[*.{nim,zig,py}]
indent_style = space

[*.{yaml,yml,norg,clj,yuck}]
indent_style = space

[package.json]
indent_style = space

[*.{diff,md}]
trim_trailing_whitespace = false
