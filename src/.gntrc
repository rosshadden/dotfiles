################
# SETTINGS
################

[Finch]

# mouse
mouse = 1

# window manager
# wm = /usr/lib/gnt/s.so
wm = /usr/lib/gnt/irssi.so

# UI
shadow = 0
remember_position = 1
small-button = true

# colors
color-available = green; black
color-away = blue; black
color-idle = gray; black
color-offline = red; black
color-message-sent = cyan; default
color-message-received = red; default
color-message-highlight = black; green
color-message-action = yellow; default
color-timestamp = blue; default

################
# MAPPINGS
################

[GntEntry::remap]

[GntWM::binding]
a-l = window-next
a-h = window-prev
a-N = shift-right
a-P = shift-left
a-c = window-close
a-r = refresh-screen
c-r = refresh-screen
a-C = toggle-clipboard

[GntWidget::binding]

[Irssi::binding]
a-l = move-right
a-h = move-left
a-j = move-down
a-k = move-up

[GntTree::binding]
l = move-right
h = move-left
j = move-down
k = move-up

################
# COLORS
################

[colors]
# The RGB values range in [0, 1000]
black = 0; 0; 0
red = 937; 380; 333
green = 356; 768; 749
blue = 24; 714; 937
white = 1000; 1000; 1000
gray = 700; 700; 700
darkgray = 256; 256; 256

[colorpairs]
normal = white; transparent
highlight = white; blue
highlightd = blue; black
shadow = black; darkgray
title = black; red
titled = white; gray
text = red; darkgray
disabled = gray; black
urgent = green; black
