################
# SETTINGS
################

[Finch]

# mouse
mouse = 1

# window manager
# wm = /usr/lib/gnt/s.so
wm = /usr/lib/gnt/irssi.so

# UI
shadow = 0
remember_position = 1
small-button = true

# colors
color-available = green; black
color-away = blue; black
color-idle = gray; black
color-offline = red; black
color-message-sent = cyan; default
color-message-received = red; default
color-message-highlight = black; green
color-message-action = yellow; default
color-timestamp = blue; default

################
# MAPPINGS
################

[GntEntry::remap]

[GntWM::binding]
a-l = window-next
a-h = window-prev
a-N = shift-right
a-P = shift-left
a-c = window-close
a-r = refresh-screen
c-r = refresh-screen
a-C = toggle-clipboard

[GntWidget::binding]

[Irssi::binding]
a-l = move-right
a-h = move-left
a-j = move-down
a-k = move-up

[GntTree::binding]
l = move-right
h = move-left
j = move-down
k = move-up

################
# COLORS
################

[colors]
white = 1000; 1000; 1000
