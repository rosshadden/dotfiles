" config file for https://github.com/1995eaton/chromium-vim

""""""""""""""""
" META
""""""""""""""""

set localconfig
let configpath = '/home/ross/.cvimrc'
let blacklists = []

""""""""""""""""
" SETTINGS
""""""""""""""""

let mapleader = ','

set cncpcompletion

""""""""""""""""
" MAPPINGS
""""""""""""""""

unmap <Space>

" surfingkeys passthroughs
unmap : ?
iunmap <C-o>

map ; :
map <C-Space> passKeys 1

""""""""""""""""
" TABS
""""""""""""""""

let newtaburl = ''
set defaultnewtabpage
set newtabalwaysontheright
set noshowtabindices

map 0 firstTab
map $ lastTab

" alt-tab (pun)
map <A-Tab> lastUsedTab
imap <A-Tab> lastUsedTab

" TODO: make these copy the url before closing, just like in vim
map D closeTab
map dd closeTab

map u lastClosedTab

map gD :duplicate<cr>
map gM :call muteTab<cr>

map <Leader>r reloadTab
map <Leader>R reloadTabUncached
map <Leader><Leader>r reloadAllTabs
map <Leader><Leader>R :source /home/ross/.cvimrc<cr>

""""""""""""""""
" SCROLLING
""""""""""""""""

set nosmoothscroll
let scrollduration=10

map `` lastScrollPosition
map <C-y> scrollUp
map <C-e> scrollDown
map <C-u> scrollPageUp
map <C-d> scrollPageDown
imap <C-d> scrollPageDown
map <C-b> scrollFullPageUp
map <C-f> scrollFullPageDown

""""""""""""""""
" INPUT
""""""""""""""""

map i goToInput
map a goToLastInput
map I goToInput
map A goToLastInput

""""""""""""""""
" UI
""""""""""""""""

let barposition = 'bottom'
let highlight = '#00afff'
let activehighlight = '#0087ff'
set autohidecursor

""""""""""""""""
" LINKS
""""""""""""""""

set linkanimations
let hintcharacters = 'aoeusnthidkbpg'
let mouselesshintcharacters = 'aoeusnthidkbpg'

map gS :viewsource!<cr>

""""""""""""""""
" SEARCHING
""""""""""""""""

let completionengines = [ 'google', 'wikipedia', 'amazon' ]
let searchalias g = 'google'
let searchalias a = 'amazon'
