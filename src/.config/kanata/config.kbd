(defcfg
	danger-enable-cmd yes
	delegate-to-first-layer yes
)

(defvar
	tap-timeout 100
		tt $tap-timeout
	hold-timeout 100
		ht $hold-timeout
)

(defalias ;; KEYs
	xcp (tap-hold-release $tt $ht esc lctl)
	xsu (tap-hold-release $tt $ht M-A-spc lmet)
	xtp (tap-hold-release $tt $ht C-spc ctl)
)

(defalias ;; LAYERS
	pfx (tap-hold-release $tt $ht (layer-switch dvorak) (layer-while-held layers))

	app (layer-switch applications)
	dvk (layer-switch dvorak)
	mcr (layer-switch macro)
	med (fork (layer-switch media) (layer-switch mouse) (lsft rsft))
	num (layer-switch numbers)
	qwr (layer-switch qwerty)
	sys (fork (layer-switch system) (layer-switch screenshot) (lsft rsft))
)

(defsrc
	esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12        ssrq slck pause
	grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc  ins  home pgup  nlck kp/  kp*  kp-
	tab  q    w    e    r    t    y    u    i    o    p    [    ]    \     del  end  pgdn  kp7  kp8  kp9  kp+
	caps a    s    d    f    g    h    j    k    l    ;    '    ret                        kp4  kp5  kp6
	lsft z    x    c    v    b    n    m    ,    .    /    rsft                 up         kp1  kp2  kp3  kprt
	lctl lmet lalt           spc            ralt rmet cmp  rctl            left down rght  kp0  kp.
)

