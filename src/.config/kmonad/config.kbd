(defalias
  ;; tap/hold keys
  xcp (tap-hold-next 400 esc ctl)
  xlt (tap-hold-next 400 C-spc lalt)
  xsu (tap-hold-next 400 M-spc lmet)

  ;; keyboard layouts
  dvk (layer-switch dvorak)
  qwr (layer-switch qwerty))

(deflayer dvorak
  _    _    _    _    _    _    _    _    _    _    _    _    _          _    _    @qwr
