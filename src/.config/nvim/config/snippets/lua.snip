################
# MODULES
################

snippet require
alias r req
options head
	${2:$1} = require('${1}')

################
# LOGS
################

# long-form

snippet console-log
alias cl
	print(${1:'${3:$2\}', ${2\}})

# shorthand

snippet log
	print(${1:TARGET})

################
# LOVE
################

snippet exit
alias q
options head
	love.event.quit()

################
# LIBRARIES
################

snippet debug
alias d
options head
	debugger()
