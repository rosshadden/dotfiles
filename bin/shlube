#!/usr/bin/env bash

##
# Normalizes running shells with a specific command.
#
# TODO: make use parent shell by default
#
# Usage:
#   shlube zsh -- echo hi
#   echo "echo hi" | shlube nu
##
function main() {
	local shell="$1"
	shift 2
	$shell -c "$(echo "$@")"
}

if has-pipe; then
	main "$1" -c "$(cat)"
else
	main "$@"
fi
