#!/usr/bin/env bash

################################
# Control and query media
#
# Dependencies:
# - [playerctl](https://github.com/acrisci/playerctl)
################################

muse() {
	local players="$(playerctl -l)"
	if [[ ! $players ]]; then exit 0; fi

	local action="${1:-query}"

	if [[ $action == "query" ]]; then
		declare -A icons
		icons["Playing"]=""
		icons["Paused"]=""
		icons["Stopped"]=""

		local artist="$(playerctl metadata artist)"
		local title="$(playerctl metadata title)"
		local album="$(playerctl metadata album)"
		local status="$(playerctl status)"
		local icon="${icons[$status]}"

		echo "$icon $artist - $title"
	fi
}

muse "$@"
