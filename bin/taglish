#!/usr/bin/env bash

function taglish() {
	local version=$(grep '^\s\s"version"' package.json | sed -r 's;^\s+"version":\s?"(.+)",?;\1;')

	echo "Committing $version..."
	git commit package.json -m 'version++'

	echo "Tagging $version..."
	git tag "v$version"

	echo "Pushing $version..."
	git push --tags
	git out

	echo "Publishing $version..."
	npm publish
}

taglish "$@"
