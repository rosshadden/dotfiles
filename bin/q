#!/usr/bin/env bash

command="$1"
shift

qDebug() {
	for entry in $(ps aux | fzf -m --preview= | awk '{ print $2 }'); do
		echo $* "$entry"
	done
}

qKill() {
	for entry in $(ps aux | fzf -m --preview= | awk '{ print $2 }'); do
		kill $* "$entry"
	done
}

if [[ "$command" == "debug" ]]; then
	qDebug "$*"
elif [[ "$command" == "kill" ]]; then
	qKill "$*"
fi
